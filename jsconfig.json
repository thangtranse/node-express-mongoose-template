{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["./models/*"],
      "@constants/*": ["./constants/*"],
      "@services/*": ["./services/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
